<div class="container">
  <h1>Edit your Party</h1>
  <%= simple_form_for(@party_flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :surface %>
  <%= f.input :people_capacity %>
  <%= f.input :bed_capacity %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.input :number_of_room %>
  <%= f.input :agrement_list %>
  <%= f.input :price %>
  <div class="mt-2">
      <%= f.submit class: "btnsearch"%>
    <% end %>
    <%= link_to party_flat_path(@party_flat), class: "btn btn-danger",
      method: :delete,
      data: { confirm: "Are you sure you want to delete this flat?" } do %>
      <i class="fas fa-trash-alt"></i> Delete
    <% end %>
    <%= link_to party_flat_path(@party_flat), class: "btn btn-secondary" do %>
      <i class="fas fa-undo-alt"></i> Back to flat
    <% end %>
  </div>
</div>
